<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:background="@color/White">


    <ImageView
            android:id="@+id/logo"
            android:src="@drawable/flecha"
            android:layout_alignParentLeft="true"
            android:padding="5px"
            android:layout_width="60px"
            android:layout_height="60px" android:layout_margin="1dp"/>

    <TextView
            android:id="@+id/nick"
            android:layout_toRightOf="@id/logo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Nick" android:paddingTop="5dp" android:gravity="bottom|left" android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp" android:textStyle="bold"/>

    <TextView
            android:id="@+id/mensaje"
            android:layout_below="@id/nick"
            android:layout_toRightOf="@id/logo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Mensaje" android:paddingTop="5dp" android:paddingBottom="5dp"/>

</RelativeLayout>