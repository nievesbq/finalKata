<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.ejmc.android.simplechat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
            android:minSdkVersion="14"
            android:targetSdkVersion="14" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/chat_icon"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
        <activity
                android:name="org.ejmc.android.simplechat.LoginActivity"
                android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name="org.ejmc.android.simplechat.ConfigActivity"
                android:label="@string/app_name" >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="org.ejmc.android.simplechat.LoginActivity" />
        </activity>
        <activity
                android:name="org.ejmc.android.simplechat.ChatActivity"
                android:configChanges="orientation|keyboardHidden"
                android:label="@string/app_name" >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="org.ejmc.android.simplechat.LoginActivity" />
        </activity>

    </application>

</manifest>